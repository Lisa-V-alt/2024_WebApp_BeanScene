@model IEnumerable<BeanScene.Models.Sitting>

@{
    ViewData["Title"] = "Index";
}

<h1>Sittings</h1>

<div class="row">
    <div class="col-md-4">
        <h3>Breakfast</h3>
        <img src="@ViewBag.BreakfastImage?v=@DateTime.Now.Ticks" alt="Breakfast" class="img-fluid" />
        @if (User.IsInRole("Manager"))
        {
            <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                <input type="hidden" name="sitting" value="Breakfast" />
                <input type="file" name="file" class="form-control" />
                <input type="submit" value="Upload" class="btn btn-primary mt-2" />
            </form>
        }
    </div>
    <div class="col-md-4">
        <h3>Lunch</h3>
        <img src="@ViewBag.LunchImage?v=@DateTime.Now.Ticks" alt="Lunch" class="img-fluid" />
        @if (User.IsInRole("Manager"))
        {
            <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                <input type="hidden" name="sitting" value="Lunch" />
                <input type="file" name="file" class="form-control" />
                <input type="submit" value="Upload" class="btn btn-primary mt-2" />
            </form>
        }
    </div>
    <div class="col-md-4">
        <h3>Dinner</h3>
        <img src="@ViewBag.DinnerImage?v=@DateTime.Now.Ticks" alt="Dinner" class="img-fluid" />
        @if (User.IsInRole("Manager"))
        {
            <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                <input type="hidden" name="sitting" value="Dinner" />
                <input type="file" name="file" class="form-control" />
                <input type="submit" value="Upload" class="btn btn-primary mt-2" />
            </form>
        }
    </div>
</div>

<p>
    @if (User.IsInRole("Manager"))
    {
        <i class="bi bi-plus-square"></i>

        <a asp-action="Create">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SittingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SittingStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SittingType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SittingStatus)
                </td>
                <td>
                    @if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.SittingId">Edit <i class="bi bi-pencil-square"></i></a>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Details" asp-route-id="@item.SittingId">Info <i class="bi bi-info-square"></i></a>
                    }
                    @if (User.IsInRole("Manager"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.SittingId">Delete <i class="bi bi-trash3"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
